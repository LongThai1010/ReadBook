 <head>
    <link rel="stylesheet" href="/css/auth.css">
 </head>
 
 <form action="/auth/create" method="POST" class="form" id="form-1">
    <h3 class="heading">Thành viên đăng ký</h3>
    <p class="desc">Đăng kí thành viên tại MyBook</p>

    <div class="spacer"></div>

    <div class="form-group">
      <label for="username" class="form-label">Tên đăng nhập</label>
      <input id="username" name="username" type="text" placeholder="VD:longthai" class="form-control form-group">
      <span class="form-message"></span>
    </div>

    <div class="form-group">
      <label for="email" class="form-label">Email</label>
      <input id="email" name="email" type="text" placeholder="VD: email@domain.com" class="form-control form-group">
      <span class="form-message"></span>
    </div>

    <div class="form-group">
      <label for="password" class="form-label">Mật khẩu</label>
      <input id="password" name="password" type="password" placeholder="Nhập mật khẩu" class="form-control form-group">
      <span class="form-message"></span>
    </div>

     <div class="form-group">
      <label for="password" class="form-label">Nhập lại mật khẩu</label>
      <input id="password_confirmation" name="password_confirmation" type="password" placeholder="Nhập mật khẩu" class="form-control form-group">
      <span class="form-message"></span>
    </div>

    <input type="hidden" value="1" name="role">

    <button class="form-submit">Đăng ký</button>
  </form>
<script>

      document.addEventListener('DOMContentLoaded', function () {
        // Mong muốn của chúng ta
        Validator({
          form: '#form-1',
          formGroupSelector: '.form-group',
          errorSelector: '.form-message',
          rules: [
            Validator.isRequired('#username', 'Vui lòng nhập tên đầy đủ của bạn'),
            Validator.isEmail('#email'),
            Validator.minLength('#password', 6),
              Validator.isRequired('#password_confirmation', 'Vui lòng nhập password của bạn'),
             Validator.isConfirmed('#password_confirmation', function () {
              return document.querySelector('#form-1 #password').value;
            }, 'Mật khẩu nhập lại không chính xác')
            ]
            
          
         
        });


       
      });

    </script>

    